generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User{
  id               Int                @id @default(autoincrement())
  name             String
  Order            Order[]
}

model CountryCode{
  id               Int                @unique @default(autoincrement())
  country_code     String             @unique @db.VarChar(3) 
  country_dcode    Int
  country_name     String
  DeliveryCost     DeliveryCost[]
  Order            Order[]

  @@id([id, country_code])
}

model DeliveryCost{
  id               Int                @id @default(autoincrement())
  cost             Int
  quantity         Int
  country_id       String
  CountryCode      CountryCode        @relation(fields: [country_id], references: [country_code])
}

model CouponType{
  id                Int                @id @default(autoincrement())
  coupon_type_name  String
  type              DiscountType
  price_type        PriceType
  discount_value    Int
  Coupon            Coupon[]
}

enum PriceType{
  PRODUCT
  DELIVERY
}

enum DiscountType{
  FLAT
  PERCENT
}

model Coupon{
  id                Int                @id @default(autoincrement())
  coupon_code       String             @unique @db.VarChar(15)
  discount          Int
  is_used           Boolean            @default(false)
  createdAt         DateTime?          @default(now()) @db.Date
  endAt             DateTime?          @db.Date
  coupon_type_id    Int
  CouponType        CouponType         @relation(fields: [coupon_type_id], references: [id])
}

model Order{
  id                Int               @id @default(autoincrement())
  pay_state         OrderType         @default(COMPLETE)
  quantity          Int
  original_price    Int
  total_price       Int?              @default(0)
  createdat         Int
  updatedat         DateTime?         @default(now()) @db.Date
  country_code_id   String
  user_id           Int
  CountryCode       CountryCode       @relation(fields: [country_code_id], references: [country_code])
  User              User              @relation(fields: [user_id], references: [id])
  Delivery          Delivery?
}

enum OrderType{
  COMPLETE
  CANCEL
}

model Delivery{
  id                Int                @id @default(autoincrement())
  order_id          Int                @unique
  state             DeliveryState      @default(CONTINUE)
  Order             Order              @relation(fields: [order_id], references: [id])
}

enum DeliveryState{
  CONTINUE
  COMPLETE
}